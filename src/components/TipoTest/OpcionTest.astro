---
interface Props {
  id: string;
  text: string;
}

const { id, text } = Astro.props;
---

<button class="boton-tipo-test" id={id}>
    {text}
</button>

<style>
    .boton-tipo-test {
        background-color: #f5f5f5;
        border: 1px solid #f5f5f5;
        border-radius: 5px;
        color: #000;
        cursor: pointer;
        font-size: 16px;
        font-weight: 500;
        margin: 10px;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s, color 0.3s;
    }

    .boton-tipo-test:hover {
        background-color: #000;
        color: #fff;
    }
</style>